<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_no_background"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo Image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please sign in with speerd credentials"
        android:fontFamily="@font/robotomonobold"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/robotomonoregular"
        android:padding="10dp"
        android:drawableStart="@drawable/usernamevector"
        android:drawablePadding="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Username"
        android:inputType="text"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/robotomonoregular"
        android:padding="10dp"
        android:drawableStart="@drawable/passwordvector"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/robotomonoregular"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_border"
        android:text="login"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="no account? sign up here."
        android:fontFamily="@font/robotomonobold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/robotomonoregular"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border"
        android:text="register"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>